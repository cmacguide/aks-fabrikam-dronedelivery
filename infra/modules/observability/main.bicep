// APPLICATION INSIGHTS
// ============================================================================

resource applicationInsights 'Microsoft.Insights/components@2020-02-02' = {
  name: applicationInsightsName
  location: location
  kind: 'web'
  tags: union(tags, {
    Service: 'ApplicationInsights'
    Purpose: 'DistributedTracing'
  })
